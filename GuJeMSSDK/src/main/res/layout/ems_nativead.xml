<?xml version="1.0" encoding="utf-8"?>
<!--
All styles for this layout are defined in R.values.integrated_ad_style. Edit
the styles file and this layout at free will. Please note that the four elements in
this layout, hint, thumb, headline and kicker are mandatory for the SDK to fill the
ad with content.

** DO NOT REMOVE/RENAME ANY OF THE NODES. FEEL FREE TO REPOSITION THEM **
-->
<com.google.android.gms.ads.formats.NativeContentAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:minHeight="50dp" >
    
    <TextView
        android:id="@+id/contentad_marker"
        style="@style/GuJEMSNativeContentAd.ems_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ems_native_ad_marker" />

    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/contentad_headline"
            style="@style/GuJEMSNativeContentAd.ems_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/contentad_image"
                    style="@style/GuJEMSNativeContentAd.ems_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="100dp"
                    android:maxHeight="50dp"/>

                <TextView
                    android:id="@+id/contentad_call_to_action"
                    style="@style/GuJEMSNativeContentAd.ems_call_to_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/contentad_body"
                    style="@style/GuJEMSNativeContentAd.ems_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="16dp"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/contentad_advertiser"
                        style="@style/GuJEMSNativeContentAd.ems_advertiser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/contentad_logo"
                        style="@style/GuJEMSNativeContentAd.ems_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="40dp"
                        android:maxHeight="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.gms.ads.formats.NativeContentAdView>