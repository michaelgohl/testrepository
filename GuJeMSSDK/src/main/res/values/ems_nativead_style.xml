<?xml version="1.0" encoding="utf-8"?>
<!-- All styles in this values file affect the layout R.layout.ems_nativead
which is used for native advertising (content ads). Content Ads consist of
an variety of ad server filled elements.
Also check R.layout.ems_nativead for futher customization. Note that the 
elements are mandatory for the SDK to fill the 
ad with content.

** DO NOT REMOVE/RENAME ANY OF THE NODES. FEEL FREE TO EDIT THEM **

 -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- parent style for integrated ad -->
    <style name="GuJEMSNativeContentAd">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <!-- style for "sponsored" hint text -->
    <style name="GuJEMSNativeContentAd.ems_marker" parent="GuJEMSNativeContentAd">
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">7sp</item>
        <item name="android:padding">1sp</item>
        <item name="android:background">#AA00AA</item>
    </style>
    <!-- style for "sponsored" hint text -->
    <style name="GuJEMSNativeContentAd.ems_advertiser" parent="GuJEMSNativeContentAd">
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">7sp</item>
        <item name="android:padding">1sp</item>
    </style>
	<!-- style for "sponsored" hint text -->
    <style name="GuJEMSNativeContentAd.ems_call_to_action" parent="GuJEMSNativeContentAd">
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">7sp</item>
        <item name="android:padding">1sp</item>
    </style>   
    <!-- style for ad image/thumb -->
    <style name="GuJEMSNativeContentAd.ems_image" parent="GuJEMSNativeContentAd">
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">120dp</item>
    </style>    
    <!-- style for headline -->
    <style name="GuJEMSNativeContentAd.ems_headline" parent="GuJEMSNativeContentAd">
        <item name="android:textSize">12sp</item> 
        <item name="android:textColor">#dd0000</item> 
        <item name="android:padding">2sp</item>
        <item name="android:lines">1</item>
    </style>    
    <!-- style for kicker text -->
    <style name="GuJEMSNativeContentAd.ems_body" parent="GuJEMSNativeContentAd">
        <item name="android:gravity">top</item>
        <item name="android:textStyle">bold</item>      
        <item name="android:textSize">16sp</item> 
        <item name="android:padding">2sp</item>
        <item name="android:lines">3</item>
        <item name="android:textColor">#0000ff</item>
    </style>
    <!-- style for ad image/thumb -->
    <style name="GuJEMSNativeContentAd.ems_logo" parent="GuJEMSNativeContentAd">
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">120dp</item>
    </style>           
</resources>