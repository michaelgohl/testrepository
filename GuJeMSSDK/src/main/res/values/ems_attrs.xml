<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- custom attributes for ad views -->
    <attr name="ems_onAdSuccess" format="string" />
    <attr name="ems_onAdEmpty" format="string" />
    <attr name="ems_onAdError" format="string" />
    <attr name="ems_zoneId" format="string" />
    <attr name="ems_kw" format="boolean" />
    <attr name="ems_geo" format="boolean" />
    <attr name="ems_lat" format="float" />
    <attr name="ems_lon" format="float" />
    <attr name="ems_adUnit" format="string" />
    <attr name="ems_autoPlayAds" format="boolean" />
    <attr name="ems_noRectangle" format="boolean" />
    <attr name="ems_noBillboard" format="boolean" />
    <attr name="ems_noDesktopBillboard" format="boolean" />
    <attr name="ems_noLeaderboard" format="boolean" />
    <attr name="ems_noTwoToOne" format="boolean" />
    <attr name="ems_noThreeToOne" format="boolean" />

    <!-- attribute usage for default web view -->
    <declare-styleable name="GuJEMSAdView">
        <attr name="ems_onAdSuccess" />
        <attr name="ems_onAdEmpty" />
        <attr name="ems_onAdError" />
        <attr name="ems_zoneId" />
        <attr name="ems_adUnit" />
        <attr name="ems_kw" />
        <attr name="ems_geo" />
        <attr name="ems_lat" />
        <attr name="ems_lon" />
        <attr name="ems_noRectangle"/>
        <attr name="ems_noBillboard"/>
        <attr name="ems_noDesktopBillboard"/>
        <attr name="ems_noLeaderboard"/>
        <attr name="ems_noTwoToOne"/>
        <attr name="ems_noThreeToOne"/>
    </declare-styleable>
    
    <!-- attribute usage for native content ad view -->
    <declare-styleable name="GuJEMSNativeContentAdView">
        <attr name="ems_onAdSuccess" />
        <attr name="ems_onAdEmpty" />
        <attr name="ems_onAdError" />
        <attr name="ems_adUnit" />
        <attr name="ems_kw" />
        <attr name="ems_geo" />
        <attr name="ems_lat" />
        <attr name="ems_lon" />
    </declare-styleable>    

    <!-- attribute usage for video player -->
    <declare-styleable name="GuJEMSVideoPlayer">
        <attr name="ems_adUnit" />
        <attr name="ems_kw" />
        <attr name="ems_geo" />
        <attr name="ems_lat" />
        <attr name="ems_lon" />
        <attr name="ems_autoPlayAds" />
    </declare-styleable>

    <!-- attribute usage for InFlow format -->
    <declare-styleable name="GuJEMSInFlowView">
        <attr name="ems_adUnit" />
        <attr name="ems_kw" />
        <attr name="ems_geo" />
        <attr name="ems_lat" />
        <attr name="ems_lon" />
    </declare-styleable>

    <!-- Standard layout is for phones -->
    <bool name="largeDisplay">false</bool>

</resources>